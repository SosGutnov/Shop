@model List<IdentityRole>
<div class="row">
    @await Html.PartialAsync("AdminLeftPanel")
    <div class="col-9">
        <h1>Список ролей</h1>
        <a asp-area="Admin" asp-controller="Role" asp-action="Add">Добавить новую роль</a>
        <table class="table">
            <tr>
                <td>Название</td>
                <td></td>
            </tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td><a 
                        asp-area="Admin"
                        asp-controller="Role"
                        asp-action="Remove"
                        asp-route-name="@role.Name">удалить</a></td>
                </tr>
            }
        </table>
    </div>
</div>
