@model List<OrderViewModel>
<div class="row">
    @await Html.PartialAsync("AdminLeftPanel")
    <div class="col-9">
        <h1>Список заказов</h1>
        <table class="table">
            <tr>
                <td>№</td>
                <td>Сумма</td>
                <td>Статус</td>
                <td>Пользователь</td>
                <td>Дата</td>
                <td>Время</td>
                <td></td>
            </tr>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Cost</td>
                    <td>@EnumHelper.GetDisplayName(@order.Status)</td>
                    <td>@order.User.Name</td>
                    <td>@order.CreatedDateTime.ToString("d")</td>
                    <td>@order.CreatedDateTime.ToString("t")</td>
                    <td><a 
                        asp-area="admin"
                        asp-controller="order"
                        asp-action="detail"
                        asp-route-id="@order.Id">подробнее</a></td>
                </tr>
            }

        </table>
    </div>
</div>
