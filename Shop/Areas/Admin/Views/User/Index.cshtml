@model List<UserViewModel>
<div class="row">
    @await Html.PartialAsync("AdminLeftPanel")
    <div class="col-9">
        <h1>Список пользователей</h1>
        <a asp-area="Admin" asp-controller="User" asp-action="Add">Добавить пользователя</a>
        <table class="table">
            <tr>
                <td>№</td>
                <td>Пользователь</td>
                <td>Почта(логин)</td>
                <td>Телефон</td>
                <td></td>
            </tr>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Name</td>
                    <td>@order.Email</td>
                    <td>@order.Phone</td>
                    <td>
                        <a asp-area="admin"
                           asp-controller="user"
                           asp-action="detail"
                           asp-route-id="@order.Id">подробнее</a>
                    </td>
                </tr>
            }

        </table>
        
    </div>
</div>
