@model List<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}
  
@if(Model.Count == 0)
{
    <div class="text-center">
        <h2>Тут пусто</h2>
    </div>
}
else
{
<div class="row">
@foreach(var product in Model){
        <div class="col-4 card shadow">
                <div class="yith-wcwl-add-button">
                    <a href="/home/liked/@product.Id?pageName=favorites" class="alt button" rel="nofollow">
                        @await Component.InvokeAsync("Like", @product.Id)
                    </a>
                </div>
                <a href="/product/index/@product.Id">
                    <img src=@product.ImagePath class="card-img-top" alt="...">
                </a>
            <div class="card-body">
                <a href="/product/index/@product.Id">
                        <h5 class="card-title name-product">@product.Name</h5>
                </a>
                    
                <p class="card-text">@product.Cost ₽</p>
            </div>
        </div>
}
</div>
}