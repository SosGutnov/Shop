@model List<Product>
<div class="row">
    @await Html.PartialAsync("AdminLeftPanel")
    <div class="col-9">
        <h1>Список товаров</h1>
        <a asp-controller="Admin" asp-action="AddProduct">Добавить новый товар</a>
        <table class="table">
            <tr>
                <td>№</td>
                <td>Название</td>
                <td>Цена</td>
            </tr>
            @foreach(var product in Model) {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Cost</td>
                    <td><a href="/admin/editProduct/@product.Id">Редактировать</a></td>
                    <td><a href="/admin/deleteProduct/@product.Id">Удалить</a></td>
                </tr>
            }
            
        </table>
    </div>
</div>
