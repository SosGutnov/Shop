<div class="form_auth_block">
    <div class="form_auth_block_content">
        <p class="form_auth_block_head_text">Авторизация</p>
        <form class="form_auth_style" action="#" method="post">
            <label>Введите Ваш имейл</label>
            <input class="input_auth" type="email" name="username" placeholder="Введите Ваш имейл" required>
            <label>Введите Ваш пароль</label>
            <input class="input_auth" type="password" name="password" placeholder="Введите пароль" required>
            <button class="btn btn-secondary form_auth_button" type="submit" name="form_auth_submit" asp-controller="Account" asp-action="Login">Войти</button>
            <a class="btn btn-secondary form_auth_button" asp-controller="Account" asp-action="Register">Регистрация</a>
        </form>
        
    </div>
    
</div>